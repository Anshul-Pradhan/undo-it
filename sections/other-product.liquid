<section class="dont-work">
  <div class="dw-top">
    <img src="{{ section.settings.product_img |  img_url: 'master' }}" alt="">
  </div>
  <div class="container">
    <div class="dw-wrapper">
      <div class="dw-head">
        <h2>social drinking is on the rise, and so are<span class="hang">
            hangovers</span>
          <h2 class="all-caps">CURRENT SOLUTIONS DONâ€™T WORK</h2>
        </h2>
      </div>
      <div class="dw-content">
        {% for block in section.blocks %}
          <div class="item">
            <div class="dwi-img">
              <img
                src="{{ block.settings.img |  img_url: 'master' }}"
                alt=""
                class="icon">
            </div>
            <div class="dwi-head">
              <p>{{ block.settings.head }}</p>
            </div>
            <div class="dwi-para">
              <p>{{ block.settings.para }}</p>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Dont Work Solutions",
    "settings": [
      {
        "type": "image_picker",
        "id": "product_img",
        "label": "Product Image"
      }, {
        "type": "text",
        "id": "haeding",
        "label": "Heading"
      }
    ],
    "blocks": [
      {
        "name": "Side Effects",
        "type": "side-effect",
        "settings": [
          {
            "type": "image_picker",
            "id": "img",
            "label": "Select Image"
          }, {
            "type": "text",
            "id": "head",
            "label": "Heading"
          }, {
            "type": "text",
            "id": "para",
            "label": "Paragraph"
          }
        ]
      }
    ]
  }
{% endschema %}