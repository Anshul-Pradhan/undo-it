  <div class="faq-wrapper">
    <div class="container">
      <div class="faq-con">
        <div class="faq-tabs">
          <div class="tab">
            <button
              class="tablinks"
              onclick="openCity(event, 'London')"
              id="defaultOpen">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                class="w-6 h-6">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M8.25 18.75a1.5 1.5 0 0 1-3 0m3 0a1.5 1.5 0 0 0-3 0m3 0h6m-9 0H3.375a1.125 1.125 0 0 1-1.125-1.125V14.25m17.25 4.5a1.5 1.5 0 0 1-3 0m3 0a1.5 1.5 0 0 0-3 0m3 0h1.125c.621 0 1.129-.504 1.09-1.124a17.902 17.902 0 0 0-3.213-9.193 2.056 2.056 0 0 0-1.58-.86H14.25M16.5 18.75h-2.25m0-11.177v-.958c0-.568-.422-1.048-.987-1.106a48.554 48.554 0 0 0-10.026 0 1.106 1.106 0 0 0-.987 1.106v7.635m12-6.677v6.677m0 4.5v-4.5m0 0h-12" />
              </svg>
              Orders, deliveries & returns</button>
            <button class="tablinks" onclick="openCity(event, 'Paris')">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                class="w-6 h-6">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M15.182 15.182a4.5 4.5 0 0 1-6.364 0M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0ZM9.75 9.75c0 .414-.168.75-.375.75S9 10.164 9 9.75 9.168 9 9.375 9s.375.336.375.75Zm-.375 0h.008v.015h-.008V9.75Zm5.625 0c0 .414-.168.75-.375.75s-.375-.336-.375-.75.168-.75.375-.75.375.336.375.75Zm-.375 0h.008v.015h-.008V9.75Z" />
              </svg>
              Products</button>
          </div>
        </div>
        <div class="faq-content">
          <div id="London" class="tabcontent">
            {% assign order = section.blocks | where: 'type', 'orders' %}
            {% for block in order %}
              <div class="faq-block">
                <div class="faq-ques">
                  <h4>{{ block.settings.faq_inner_ques }}</h4>
                  {% render 'down-icon' %}
                </div>
                <div class="faq-ans">
                  {{ block.settings.faq_inner_ans }}
                </div>
              </div>
            {% endfor %}
          </div>

          <div id="Paris" class="tabcontent">
            {% assign product = section.blocks | where: 'type', 'product' %}
            {% for block in product %}
              <div class="faq-block">
                <div class="faq-ques">
                  <h4>{{ block.settings.faq_inner_ques }}</h4>
                  {% render 'down-icon' %}
                </div>
                <div class="faq-ans">
                  {{ block.settings.faq_inner_ans }}
                </div>
              </div>
            {% endfor %}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  function openCity(evt, cityName) {
  var i, tabcontent, tablinks;
  tabcontent = document.getElementsByClassName("tabcontent");
  for (i = 0; i < tabcontent.length; i++) {
    tabcontent[i].style.display = "none";
  }
  tablinks = document.getElementsByClassName("tablinks");
  for (i = 0; i < tablinks.length; i++) {
    tablinks[i].className = tablinks[i].className.replace(" active", "");
  }
  document.getElementById(cityName).style.display = "flex";
  evt.currentTarget.className += " active";
  }

  // Get the element with id="defaultOpen" and click on it
  document.getElementById("defaultOpen").click();

  $(document).ready(function() {
    $('.faq-ques').click(function() {
            var $block = $(this).parent('.faq-block');
            var $answer = $(this).next('.faq-ans');
            $('.faq-ans').not($answer).slideUp();
            $answer.slideToggle();
            $('.faq-block').removeClass('active');
            $block.toggleClass('active');
        });
    });
</script>


{% schema %}
  {
    "name": "FAQ Page",
    "settings": [],
    "blocks": [
      {
        "name": "Orders Block",
        "type": "orders",
        "settings": [
          {
            "type": "text",
            "id": "faq_inner_ques",
            "label": "Faq Inner Question"
          }, {
            "type": "richtext",
            "id": "faq_inner_ans",
            "label": "Faq Inner Answers"
          }
        ]
      }, {
        "name": "Product Block",
        "type": "product",
        "settings": [
          {
            "type": "text",
            "id": "faq_inner_ques",
            "label": "Faq Inner Question"
          }, {
            "type": "richtext",
            "id": "faq_inner_ans",
            "label": "Faq Inner Answers"
          }
        ]
      }
    ]
  }
{% endschema %}