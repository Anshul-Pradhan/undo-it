<div class="pre-footer padt-75">
  <div class="container">
    <div class="pf-wrapper">
      <div class="head">
        <h2>{{ section.settings.head }}</h2>
      </div>
      <div class="para">
        <p>{{ section.settings.para }}</p>
      </div>
    </div>
  </div>
</div>

<footer>
  <div class="container">
    <div class="footer-wrapper">
      <div class="head">
        {{ section.settings.footHead }}
      </div>
      <div class="newsletter">
        <input type="email" placeholder="Email address">
        <input type="submit" value="Subscribe">
      </div>
      <div class="foot-nav">
        <ul>
          {% for link in section.settings.menu.links %}
            <li>
              <a href="{{ link.url }}">{{ link.title }}</a>
            </li>
          {% endfor %}
        </ul>
      </div>
    </div>
  </div>
</footer>

<div class="contact-modal">
      <div class="contact-container">
        <div class="cc-wrap">
          <div class="cc-cross">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
  <path stroke-linecap="round" stroke-linejoin="round" d="M6 18 18 6M6 6l12 12" />
</svg>

          </div>
          <div class="cc-head">
            <h4>{{ section.settings.cc-head }}</h4>
          </div>
          <div class="cc-body">
            {%  for block in section.blocks %}
              <div class="cc-item">
                <p>{{ block.settings.head }}</p>
                <a href="{{ block.settings.anchor-url }}">{{ block.settings.anchor-txt }}</a>
              </div>
            {% endfor %}
          </div>
        </div>
      </div>
    </div>

    <script>
      $(document).ready(function(){
        $("a[href='#open-modal']").click(function(){
            $(".contact-modal").addClass('active');
        });
        $(".cc-cross").click(function(){
          $(".contact-modal").removeClass('active');
        });
      });
    </script>

{% schema %}
  {
    "name": "Footer",
    "settings": [
      {
        "type": "text",
        "id": "head",
        "label": "Heading",
        "default": "HydrationCo"
      }, {
        "type": "richtext",
        "id": "para",
        "label": "Paragraph",
        "default": "<p>we make products that focus on <strong>healing through hydration</strong> with mostly <strong>herbal ingredients</strong></p>"
      }, {
        "type": "richtext",
        "id": "footHead",
        "label": "Footer Text",
        "default": "<p>Because. We. Are. Your. Friends.<br>10% off your first order over â‚¹2000.</p>"
      }, {
        "type": "link_list",
        "id": "menu",
        "label": "Select Menu"
      },
      {
            "type": "text",
            "id": "cc-head",
            "label": "Modal Heading"
          }
    ],
    "blocks": [
      {
        "name": "Contact Modal",
        "type":"contact-modal",
        "settings": [
          {
            "type": "text",
            "id": "head",
            "label": "Heading"
          },
          {
            "type": "text",
            "id": "anchor-url",
            "label": "Anchor URL"
          },
          {
            "type": "text",
            "id": "anchor-txt",
            "label":"Anchor Text"
          }
        ]
      }
    ]
  }
{% endschema %}